{
  "openapi": "3.0.3",
  "info": {
    "title": "Programa Jedi: Desafio Back-end",
    "description": "Desafio desenvolvido pela Plataforma Impact para o processo seletivo do banco de talentos. Feito por Lucas Vinícius Santos de Lima, candidato a desenvolvedor back-end.",
    "contact": {
      "email": "limalucks@hotmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [{
    "url": "http://localhost:3000/",
    "description": "API de testes"
  }],
  "paths": {
    "/Product": {
      "post": {
        "summary": "Cadastro de Produto",
        "description": "Rota para a criação de produtos.",
        "tags": ["Products"],
        "requestBody": {
          "content":{
            "application/json": {
              "schema":{
                  "type": "object",
                  "properties": {
                  "nome": {"type": "string"},
                  "descricao": {"type": "string"},
                  "valorEmReal": {"type": "number"}
                }
              },
              "examples": {
                "product": {
                  "value": {
                    "nome": "TV",
                    "descricao": "TV 50 polegadas LG",
                    "valorEmReal": 1500
                  }
                }
              }
              }
            }
          },
          "responses": {
            "400": {
              "description": "Já existe um produto com o nome informado!"
            },
            "403": {
              "description": "Preencha todos os dados corretamente!"
            },
            "200":{
              "description": "OK!",
              "content":{
                "application/json": {
                  "schema":{
                      "type": "object",
                      "properties": {
                      "nome": {"type": "string"},
                      "id": {"type": "string"},
                      "descricao": {"type": "string"},
                      "valor": {
                        "type": "object",
                        "properties":{
                        "BRL": {"type": "number"},
                        "USD": {"type": "string"},
                        "EUR": {"type": "string"}
                        }
                      }
                    }
                  }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Listar os produtos",
        "description": "Rota para a listagem de todos os produtos.",
        "tags": ["Products"],
        "responses": {
          "404": {
            "description": "Nenhum produto cadastrado!"
          },
          "200":{
            "description": "OK!",
            "content":{
              "application/json": {
                "schema":{
                    "type": "object",
                    "properties": {
                    "produto1": {
                      "type": "object"
                    },
                    "produto2": {
                      "type": "object"
                    }
                  }
                }
            }
          }
        }
      }
      }
    },
    "/Product/{id}": {
      "get": {
        "summary": "Listar o produto",
        "description": "Rota para a listagem de produto pelo ID.",
        "tags": ["Products"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "id do produto",
            "required": true
          }
        ],
        "responses": {
          "404": {
            "description": "Nenhum produto encontrado!"
          },
          "200":{
            "description": "OK!",
            "content":{
              "application/json": {
                "schema":{
                  "type": "object",
                  "properties": {
                  "nome": {"type": "string"},
                  "id": {"type": "string"},
                  "descricao": {"type": "string"},
                  "valor": {
                    "type": "object",
                    "properties":{
                    "BRL": {"type": "number"},
                    "USD": {"type": "string"},
                    "EUR": {"type": "string"}
                    }
                  }
                }
                }
            }
          }
        }
      }
      },
      "put": {
        "summary": "Editar o produto",
        "description": "Rota para a edição de produto pelo ID.",
        "tags": ["Products"],
        "requestBody": {
          "content":{
            "application/json": {
              "schema":{}
            }
          }
        }
      },
      "delete": {
        "summary": "Excluir o produto",
        "description": "Rota para a exclusão de produto pelo ID.",
        "tags": ["Products"],
        "requestBody": {
          "content":{
            "application/json": {
              "schema":{}
            }
          }
        }
      }
    },
    "/Currency": {
      "get": {
        "summary": "Listar as cotações",
        "description": "Rota para a listagem de todas as cotações.",
        "tags": ["Currency"],
        "requestBody": {
          "content":{
            "application/json": {
              "schema":{}
            }
          }
        }
      }
  },
"/Currency/$symbol": {
  "get": {
    "summary": "Listar a cotação pelo symbol",
    "description": "Rota para a listagem da cotações pelo symbol.",
    "tags": ["Currency"],
    "requestBody": {
      "content":{
        "application/json": {
          "schema":{}
        }
      }
    }
  }
}
}
}

